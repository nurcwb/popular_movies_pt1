<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#000000">

    <ImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="50dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tv_original_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        tools:text="Original Title: Jurassic World"/>

    <TextView
    android:id="@+id/tv_plot_synopsis"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:textColor="@color/colorWhite"
    tools:text="Plot Synopsis: BLABLA BLA BLA BLABLABLA BLABLA BLA BLA BLABLABLA BLABLA BLA BLA BLABLABLA
BLABLA BLA BLA BLABLABLA BLABLA BLA BLA BLABLABLA BLABLA BLA BLA BLABLABLA BLABLA BLA BLA BLABLAB"/>

    <TextView
        android:id="@+id/tv_user_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        tools:text="User Rating: 4.5"/>

    <TextView
        android:id="@+id/tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        tools:text="Release Date: 23/06"/>

</LinearLayout>
